generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String?  // nullable if using OAuth only
  role      String   @default("user") // "user" or "admin"
  orders    Order[]
  createdAt DateTime @default(now())
}

model Category {
  id            String        @id @default(cuid())
  name          String
  slug          String        @unique
  subcategories Subcategory[]
  createdAt     DateTime      @default(now())
  products      Product[]
}

model Subcategory {
  id        String    @id @default(cuid())
  name      String
  slug      String    @unique
  categoryId String
  category  Category  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  products  Product[]
  createdAt DateTime  @default(now())
}

model Product {
  id            String       @id @default(cuid())
  title         String
  slug          String       @unique
  description   String?
  price         Int          // stored in cents
  images        String       // JSON stringified array of URLs (SQLite workaround)
  sizes         String?      // JSON stringified array of sizes (e.g. ["UK 8", "UK 9"])
  colors        String?      // JSON stringified array of colors (e.g. ["Red", "Black"])
  inventory     Int          @default(0)
  categoryId    String
  category      Category     @relation(fields: [categoryId], references: [id])
  subcategoryId String?
  subcategory   Subcategory? @relation(fields: [subcategoryId], references: [id])
  
  // Senior Implementation Fields
  status        String       @default("draft") // "draft" | "published"
  tags          String?      // JSON stringified array of tags ["New", "Trending"]
  updatedAt     DateTime     @updatedAt
  createdAt     DateTime     @default(now())
}

model Order {
  id              String   @id @default(cuid())
  
  // Customer Details
  customerName    String
  customerEmail   String
  phone           String
  shippingAddress String
  
  // Order Data (JSON since using SQLite/Simple setup for now, ideally separate OrderItem model)
  items           String   // JSON string: [{ productId, name, price, quantity }]
  totalAmount     Int      // Stored in cents
  
  // Status Tracking
  paymentMethod   String   @default("cod") // "card", "cod"
  paymentStatus   String   @default("pending") // "pending", "paid", "failed"
  orderStatus     String   @default("new") // "new", "processing", "shipped", "delivered"
  
  isNew           Boolean  @default(true) // For admin highlighting
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  // Optional: Link to Registered User if exists
  userId          String?
  user            User?    @relation(fields: [userId], references: [id])
}
